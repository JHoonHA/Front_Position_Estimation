{
  "expo": {
    "name": "PE",
    "slug": "PE",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true, 
    "splash": {
      "image": "./src/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for position estimation."
      },
      "bundleIdentifier": "com.yourname.pe"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA"],
      "package": "com.yourname.pe"
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "experimental": {
      "bridgeless": false 
    }
  }
}
